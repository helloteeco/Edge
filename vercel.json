{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/admin/precache",
      "schedule": "0 6 1,15 * *"
    },
    {
      "path": "/api/admin/sync-scores",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/admin/sync-scores",
      "schedule": "0 6 1 * *"
    },
    {
      "path": "/api/cron/daily-blog",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/biweekly-newsletter",
      "schedule": "0 15 * * 2,4"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
